<style>
  /*Activity module*/
  @media screen and (max-width: 675px) {
      .activity {
          width: 300px;
      }
  }

  .jumbotron {
    padding: 0;
    min-height: 500px;
    position: relative;
  }

  .activity {
    position: relative;
    top: 75px;
    margin: 0 auto;
    width: 90%;
    min-height: 500px;
    max-height: 800px;
    background-color: white;
    border: 1px solid #ddd;
    box-shadow: 1px 1px 1px #eee;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
  }

  .activity header {
    position: relative;
    top: 0;
    height: 12%;
    background-color: rgb(31, 137, 229);
    color: white;
  }

  .activity header h3 {
    margin: 0;
    padding: 7px;
    line-height: 23px;
  }

  /*TODO: Fix adjusting section container*/
  .activity section {
    height: 90%;
    max-height: 375px;
    overflow: hidden;
    margin-bottom: 0;
    padding: 10px;

  }

  .activity section p {
    overflow: scroll;
    height: 100%;
    width: 100%;
    font-family: 'Lato', sans-serif;
    font-weight: 300;
    font-size: 100%;
    margin: 10px;
    padding: 10px;
  }

  .activity section .thumbnail {
    height: 90%;
    width: 100%;
    max-height: 365px;
    overflow: scroll;
    position: relative;
    border: none;
    font-size: 18px;
  }

  .activity section .content-video {
    text-align: center;
  }

  .activity section .likeContainer {
    margin: 10px;
    margin-bottom: 0;
  }

  .activity .footer {
    margin: 0 auto;
    background-color: #f5f5f5;
    position: absolute;
    width: 100%;
    height: 10%;
    bottom: 0;
    border: 1px solid #ddd;
  }

  .activity footer a {
    position: relative;
    top: 10px;
    text-decoration: none;
    color: #2980B9;
  }

  .activity footer a:hover {
    background-color: #f5f5f5;
    color: #2980B9;
    opacity: .7;
  }

  #like-count {
    color: rgb(92, 184, 92);
    margin-right: 45px;
  }

  #dislike-count {
    color: rgb(217, 83, 79);
  }

  .like-btn {
    background-color: rgb(92, 184, 92);
    border-color: rgb(92, 184, 92);    
  }

  .dislike-btn {
    background-color: rgb(217, 83, 79);
    border-color: rgb(217, 83, 79);
  }

  .likeContainer {

  }

  .likeContainer button:hover {
    opacity: .8;
    cursor: pointer;
  }

  .linkContainer {
    margin-top: -35px;
    padding-left: 10px;
    padding-right: 10px; 
  }

  a:hover {
    background-color: transparent;
    font-size: 100%;
  }

  #share {
    float: right;
    cursor: pointer;
  }

  #back {
    font-size: 25px;
    margin: 0 auto;
  }

  .back-wrapper {
    width: 25%;
    margin: 0 auto;
    text-align: center;
  }

  #link {
    position: relative;
    top: 40px;
  }
</style>

<div class="jumbotron activity">
  <header>
      <h3 id="title"><%= title %></h3>
  </header>  

  <section>
    <div class="thumbnail">
      <!-- <img src="..." alt="..."> -->
      <div class="caption">
        <div id="content"><%= content %></div>
      </div>
    </div>
  </section>

  <footer class="footer">
    <div class="back-wrapper">
      <a id="back" href='<%= backLink %>' id='back'> Back </a> 
    </div>  
  </footer>
</div>