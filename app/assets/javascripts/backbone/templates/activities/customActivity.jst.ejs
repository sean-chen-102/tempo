<div class="custActContainer">
	<header> 
		<h3 id='customActivityTitle'> Custom Activity List for <%= name%> </h3> 
	</header>
	<section>
		<div class="tableContainer">
			<table id="custActTable" class="table table-bordered table-hover">
				<thead>
					<tr>
						<th>Title</th> <th>Content</th> <th>Time</th> <th>Delete</th> <th>Edit</th>
					</tr>
				</thead>

				<tbody>
					<% _.each(data, function(custAct) { %> 
						<tr class='activity <%= custAct.id %>'>
							<td>  <%= custAct.title%> </td>
							<td>  <%= custAct.content%> </td>
							<td>  <%= custAct.time%> </td>
							<td>  <button class='del-btn' id='<%= custAct.id %>'>Delete</button> </td>
							<td>   <button class='edit-btn' id='<%= custAct.id %>'>Edit</button></td>
						</tr>
						<% }); %>			
				</tbody>
			</table>
		</div>
	</section>
	<footer> 
		<a href='/tempo#createCustomActivity' id='add'> Create a 	Custom Activity </a>
	</footer>	
</div>